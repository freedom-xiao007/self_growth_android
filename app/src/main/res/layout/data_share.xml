<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:minHeight="1000dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:text="轮回次数："
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/lun_hui_time"
                        android:paddingStart="20dp"
                        android:textColor="@color/white"
                        android:text="轮回1"
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:text="气修境界："
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/qi_xiu_state"
                        android:textColor="@color/white"
                        android:text="练气境1层"
                        android:textAlignment="center"
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:text="体修境界："
                        android:textAlignment="center"
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                    <TextView
                        android:id="@+id/ti_xiu_state"
                        android:textColor="@color/white"
                        android:text="练气境1层"
                        android:textAlignment="center"
                        android:gravity="center_vertical|center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp">
                <TextView
                    android:text="使用浏览器扫码下载"
                    android:textColor="@color/white"
                    android:gravity="center_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <ImageView
                    android:src="@drawable/xiu_xian_url"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:gravity="center_vertical|left"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="时间区间："
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/date"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:gravity="center_vertical|left"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:text="时间区间："
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"/>
        </LinearLayout>

        <TextView
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:text="数据总览："
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.selfgrowth.ui.custum.TableView
            android:id="@+id/overview_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:dividerColor="#e1e1e1"
            app:dividerWidth="1px"
            app:headerColor="@color/gray"
            app:headerTextColor="@color/white"
            app:headerTextSize="10dp"
            app:rowHeight="36dp"
            app:textColor="@color/white"
            app:textSize="11sp"
            app:unitColumnWidth="0dp" />

        <TextView
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:text="数据详情："
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.selfgrowth.ui.custum.TableView
            android:id="@+id/data_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:dividerColor="#e1e1e1"
            app:dividerWidth="1px"
            app:headerColor="@color/gray"
            app:headerTextColor="@color/white"
            app:headerTextSize="10dp"
            app:rowHeight="36dp"
            app:textColor="@color/white"
            app:textSize="11sp"
            app:unitColumnWidth="0dp" />
    </LinearLayout>
</ScrollView>
