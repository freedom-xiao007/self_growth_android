<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/task_list_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:alpha="0.1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""/>
    <TextView
        android:id="@+id/task_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"
        android:text="任务标签"
        app:drawableLeftCompat="@drawable/task_item" />
    <TextView
        android:id="@+id/v1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|center"
        android:text="任务周期:"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"/>
    <TextView
        android:id="@+id/task_cycle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|center"
        android:text="任务周期"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"/>
    <CheckBox
        android:id="@+id/task_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:button="@drawable/ic_baseline_delete_outline_50"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>