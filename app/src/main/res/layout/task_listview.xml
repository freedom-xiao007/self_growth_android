<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/task_list_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:alpha="0.1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""/>
    <TextView
        android:id="@+id/task_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:alpha="0.0"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"
        android:text="任务ID"/>
    <TextView
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"
        android:text="任务名称"
        app:drawableLeftCompat="@drawable/task_item" />
    <CheckBox
        android:id="@+id/task_complete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:button="@drawable/ic_baseline_check_circle_50"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/task_list_background"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_background"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_background"
        app:layout_constraintRight_toRightOf="@+id/task_list_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>