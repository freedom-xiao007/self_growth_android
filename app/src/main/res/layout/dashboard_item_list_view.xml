<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/dashboard_item_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:alpha="0.1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""/>
    <TextView
        android:id="@+id/application_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/dashboard_item_background"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_item_background"
        app:layout_constraintLeft_toLeftOf="@+id/dashboard_item_background"
        app:layout_constraintRight_toRightOf="@+id/dashboard_item_background"
        android:text="应用名称"
        app:drawableLeftCompat="@drawable/task_item" />
    <TextView
        android:id="@+id/application_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/dashboard_item_background"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_item_background"
        app:layout_constraintLeft_toLeftOf="@+id/dashboard_item_background"
        app:layout_constraintRight_toRightOf="@+id/dashboard_item_background"
        android:text="100分钟"
        app:drawableLeftCompat="@drawable/task_item" />

</androidx.constraintlayout.widget.ConstraintLayout>