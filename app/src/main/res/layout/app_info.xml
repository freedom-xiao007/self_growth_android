<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_info_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:alpha="0.1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""/>
    <TextView
        android:id="@+id/dashboard_cycle_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center_vertical|left"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/app_info_background"
        app:layout_constraintBottom_toBottomOf="@+id/app_info_background"
        app:layout_constraintLeft_toLeftOf="@+id/app_info_background"
        app:layout_constraintRight_toRightOf="@+id/app_info_background"
        android:text="手机应用信息"/>

    <ListView
        android:id="@+id/app_info_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
        android:listSelector="@color/blue_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:scrollbars="none"/>
</androidx.constraintlayout.widget.ConstraintLayout>