<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_add"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/add_task_group"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_baseline_brush_50"
        android:hint="请输入任务组名称"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:completionThreshold="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="新增任务"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0" />

    <EditText
        android:id="@+id/add_task_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_brush_50"
        android:drawablePadding="15dp"
        android:hint="请输入任务名称"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/add_task_dsc"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_brush_50"
        android:drawablePadding="15dp"
        android:hint="请输入任务描述"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/add_task_label_show"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_toggle_on_50"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:hint="任务标签    其他"
        android:focusable="false"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/add_task_label"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawablePadding="15dp"
        android:alpha="0"
        app:arrowTint="@color/black"
        app:textTint="@color/black"
        app:entries="@array/add_task_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5" />

    <EditText
        android:id="@+id/add_task_cycleType_show"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_toggle_on_50"
        android:drawablePadding="15dp"
        android:hint="任务周期    无"
        android:focusable="false"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.5" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/add_task_cycleType"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawablePadding="15dp"
        android:alpha="0"
        app:arrowTint="@color/black"
        app:textTint="@color/black"
        app:entries="@array/task_cycle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.5" />


    <EditText
        android:id="@+id/add_task_learnType_show"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_toggle_on_50"
        android:drawablePadding="15dp"
        android:hint="任务类型    无"
        android:focusable="false"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/add_task_learnType"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawablePadding="15dp"
        android:alpha="0"
        app:arrowTint="@color/black"
        app:textTint="@color/black"
        app:entries="@array/task_learn_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5" />


    <EditText
        android:id="@+id/add_task_outputType_show"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_toggle_on_50"
        android:drawablePadding="15dp"
        android:hint="输出类型    无"
        android:focusable="false"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/add_task_outputType"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawablePadding="15dp"
        android:alpha="0"
        app:arrowTint="@color/black"
        app:textTint="@color/black"
        app:entries="@array/task_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5" />

    <Button
        android:id="@+id/add_task_button"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:background="@drawable/shape"
        android:alpha="0.5"
        android:text="新增"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>